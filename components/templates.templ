templ _IndividualKit(equipmentBuild models.EquipmentBuild, clazz string, title string, slot string) {
	{{ item := findBySlotId(equipmentBuild.Items, slot) }}
	{{ class := "kit-slot " + clazz }}
	<div class={ class }>
		<div class="title">{ title }</div>
		<div class="image bg-base-300">
			<img alt="item" style="max-height: 100%; max-width: 100%" src={ fmt.Sprintf("https://assets.tarkov.dev/%s-base-image.png", item.Tpl) }/>
