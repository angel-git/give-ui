}

templ _AppHeader(appName string, appVersion string) {
	<h1 class="mb-4">{ strings.ToUpper(appName) } v{ appVersion }</h1>
}

templ _AppFooter(appName string, appVersion string, profile models.SPTProfile) {
	<p class="text-xs text-left">{ strings.ToUpper(appName) } v{ appVersion }: { profile.Info.Username } - { profile.Characters.Pmc.Info.Nickname }</p>
