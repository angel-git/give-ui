func findBySlotId(items []models.ItemWithUpd, slotId string) models.ItemWithUpd {
	for _, item := range items {
		if item.SlotID != nil && *item.SlotID == slotId {
			return item
		}
	}
	return models.ItemWithUpd{}
}

